{
    "manifest_version": 2,

    "name": "stillepost extension",
    "description": "stillepost node",
    "version": "1.0",

    "browser_action": {
        "default_icon": "off.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "downloads",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["background.js", "stillepost.min.js"],
        "persistent": false
    }
}